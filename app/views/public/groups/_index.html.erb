<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>グループ名</th>
        <th>参加メンバー数</th>
        <th>紹介文</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% groups.each do |group| %>
        <tr>
          <td><%= image_tag group.group_image, size:"50x50" %></td>
          <td><%= link_to group.name, group_path(group), class: "group_#{group.id}" %></td>
          <td><%= group.group_users.count %></td>
          <td><%= group.introduction %></td>
          <% if group.owner_id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_group_path(group), class: "group_#{group.id} btn btn-sm btn-success" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>