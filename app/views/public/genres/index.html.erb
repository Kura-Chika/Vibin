<div class="container my-5">
  <h2 class="border-bottom pb-2 mb-3 text-center fw-bold">すべてのジャンル</h2>
  <p class="text-center text-muted">ジャンル名をクリックすると、詳細ページへ移動します。</p>

  <div class="row">
    <% @genres.each do |genre| %>
      <div class="col-md-4 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm">
          <%= link_to genre_path(genre), class: "text-decoration-none text-dark" do %>
            <div class="card-body">
              <h5 class="card-title"><%= genre.name %></h5>
              <p class="card-text text-muted">関連アーティスト数： <%= genre.artists.count %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @genres, theme: 'bootstrap-5' %>
  </div>
</div>