<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm rounded-4">
        <div class="card-body p-5">
          <h3 class="mb-4 text-center fw-bold">プロフィール編集</h3>
          
          <%= form_with model: @user, url: update_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :user_image, "イメージ画像", class: "form-label fw-bold" %><br>
              <!-- 画像プレビュー -->
              <div class="mb-2 text-center">
                <% if @user.user_image.attached? %>
                  <%= image_tag url_for(@user.user_image), id: "preview", class: "img-fluid rounded shadow", style: "max-height: 200px;" %>
                <% else %>
                  <p id="no-image-text">投稿画像はありません</p>
                  <%= image_tag "", id: "preview", class: "img-fluid rounded shadow d-none", style: "max-height: 200px;" %>
                <% end %>
              </div>
              <%= f.file_field :user_image, accept: "image/*", id: "user_image_input" %>
            </div>

            <div class="mb-3">
              <%= f.label :nickname, "ニックネーム", class: "form-label fw-semibold" %>
              <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control rounded-pill" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label fw-semibold" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control rounded-pill" %>
            </div>

            <div class="mb-4">
              <%= f.label :introduction, "紹介文", class: "form-label fw-semibold" %>
              <%= f.text_area :introduction, rows: 3, autocomplete: "introduction", class: "form-control rounded-pill", style: "resize: none;" %>
            </div>

            <div class="d-flex justify-content-center mt-4">
              <%= f.submit "編集内容を保存", class: "btn btn-primary px-4 rounded-pill fw-bold" %>
              <%= link_to "退会する", unsubscribe_path, class: "ml-3 btn btn-outline-danger px-4 rounded-pill fw-bold" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>