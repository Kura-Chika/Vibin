<div class="container my-4">
  <div class="card p-4 shadow-sm">
    <h2 class="mb-3"><%= @user.nickname %> さんのプロフィール</h2>
    
    <% if @user.user_image.attached? %>
      <%= image_tag @user.user_image, class: "rounded-circle mb-3", size: "100x100" %>
    <% end %>

    <p><strong>メールアドレス：</strong> <%= @user.email %></p>
    <p><strong>自己紹介：</strong> <%= @user.introduction %></p>

    <% if @user.email != "guest@example.com" %>
      <%= link_to "プロフィール編集", edit_path, class: "btn btn-sm btn-outline-primary" %>
    <% end %>
  </div>

  <div class="mt-4 d-grid gap-2">
    <%= link_to "あなたの投稿を見る", user_posts_path, class: "btn btn-outline―primary btn-lg" %><br>
    <%= link_to "いいねした投稿を見る", user_goods_path, class: "btn btn-outline-primary btn-lg" %><br>
    <%= link_to "参加中のグループを見る", user_groups_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>
</div>

