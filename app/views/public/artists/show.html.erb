<div class="container my-5">
  <div class="row mb-4">
    <!-- アーティスト画像 -->
    <div class="col-md-5 text-center">
      <% if @artist.artist_image.attached? %>
        <%= image_tag @artist.artist_image, class: "img-fluid rounded shadow", style: "max-height: 300px;" %>
      <% else %>
        <%= image_tag 'no_image.jpg', class: "img-fluid rounded shadow", style: "max-height: 300px;" %>
      <% end %>
    </div>

    <!-- アーティスト基本情報 -->
    <div class="col-md-7">
      <h2 class="fw-bold mb-3"><%= @artist.name %></h2>
      <p><strong>ジャンル：</strong><%= @artist.genre.name if @artist.genre %></p>
      <p><%= @artist.introduction %></p>
    </div>
  </div>

  <!-- 関連投稿一覧 -->
  <div class="mb-4">
    <h3 class="border-bottom pb-2 mb-3"><%= @artist.name %> に関連する投稿</h3>
    <% if @posts.any? %>
      <ul class="list-group">
        <% @posts.each do |post| %>
          <li class="list-group-item">
            <%= link_to post.title, post_path(post), class: "text-decoration-none" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">関連投稿はありません。</p>
    <% end %>
  </div>

  <!-- 関連グループ一覧 -->
  <div class="mb-4">
    <h3 class="border-bottom pb-2 mb-3"><%= @artist.name %> に関連するグループ</h3>
    <% if @groups.any? %>
      <ul class="list-group">
        <% @groups.each do |group| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to group.name, group_path(group), class: "text-decoration-none" %>
            <span class="badge bg-secondary rounded-pill"><%= group.group_users.count %>人参加中</span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">関連グループはありません。</p>
    <% end %>
  </div>
</div>



