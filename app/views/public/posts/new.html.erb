<%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :内容 %><br>
    <%= f.text_area :body, class: "form-control mb-3" %>
  </div>
  <div>
    <%= f.submit '新規投稿', class: "btn btn-success" %>
  </div>
<% end %>
