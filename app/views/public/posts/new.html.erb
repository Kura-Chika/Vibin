<%= form_with model: @post do |f| %>
  <table class="mx-auto">
    <tr>
      <th><%= f.label :item_image, "投稿画像" %></th>
      <td><%= f.file_field :item_image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title,  placeholder:"タイトル", class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :body, "内容" %></th>
      <td><%= f.text_area :body, size: "50x5", placeholder:"ここに投稿内容を記述します", class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :artist_id, "アーティストタグ" %></th>
      <td>
        <% Artist.all.each do |artist| %>
          <%= check_box_tag "post[artist_ids][]", artist.id, @post.artist_ids.include?(artist.id) %>
          <%= artist.name %><br>
        <% end %>
      </td>
    </tr>
  </table>
  <div>
    <%= f.submit '新規投稿', class: "btn btn-success" %>
  </div>
<% end %>
