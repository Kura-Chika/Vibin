<p>投稿編集画面</p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>投稿編集</h1>
      <% if @post.errors.any? %>
        <div class="error">
          <h3>エラー文言</h3>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @post, method: :patch do |f| %>
        <div class="field">
          <%= f.label :タイトル %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :内容 %><br>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.label :artist_id, "アーティストタグ" %><br>
          <% Artist.all.each do |artist| %>
            <%= check_box_tag "post[artist_ids][]", artist.id, @post.artist_ids.include?(artist.id) %><br>
            <%= artist.name %><br>
          <% end %>
        </div>
        <div>
          <%= f.submit '投稿を更新' %>
        </div>
      <% end %>
      <%= link_to "Show", post_path(@post) %>
      <%= link_to "Back", posts_path %>
    </div>
  </div>
</div>
