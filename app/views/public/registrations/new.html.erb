<div class="container d-flex align-items-center justify-content-center">
  <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px;">
    <h5 class="text-center mb-4" style="background-color: #E0E0E0; color: #333; padding: 10px; border-radius: 5px;">
      新規ユーザー登録
    </h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
      
      <!-- エラーメッセージ -->
      <%= render "public/shared/error_messages", resource: resource %>

      <!-- ニックネーム -->
      <div class="form-group mb-3">
        <%= f.label :nickname, "ニックネーム", class: "form-label" %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネーム", class: "form-control" %>
      </div>

      <!-- メールアドレス -->
      <div class="form-group mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>

      <!-- パスワード -->
      <div class="form-group mb-3">
        <%= f.label :password, "パスワード (6文字以上)", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- パスワード確認 -->
      <div class="form-group mb-3">
        <%= f.label :password_confirmation, "パスワード (確認用)", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- 新規登録ボタン -->
      <div class="form-group my-4 d-flex justify-content-center">
        <%= f.submit "新規登録", class: "btn btn-success rounded-pill w-50" %>
      </div>

    <% end %>

    <div class="d-flex justify-content-between">
      <div class="text-center mb-4">
        <h6 style="color: #333;">既に登録済みの方</h6>
        <%= link_to "♬ 今すぐログインページへ", new_user_session_path, class: "btn btn-secondary btn-sm rounded-pill" %>
      </div>
      <div class="text-center mb-4">
        <h6 style="color: #333;">登録する前に試す</h6>
        <%= link_to "♪ ゲストログインで試してみる", users_guest_sign_in_path, class: "btn btn-secondary btn-sm rounded-pill", method: :post %>
      </div>
    </div>
  </div>
</div>