<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="alert alert-secondary mb-4">
        「<%= @query %>」の検索結果：<%= @search_type_ja %>
      </div>
      
      <% if @results.present? %> <!-- 結果があるかどうか -->
        <div class="mb-3">
          <span class="badge bg-primary" style="font-size: 1rem;">
            ヒット件数：<%= @results.count %> 件
          </span>
        </div>
        <% case @search_type %>
        <% when 'User' %>
          <%= render 'searches/user', results: @results %>
        <% when 'Post' %>
          <%= render 'searches/post', results: @results %>
        <% when 'Artist' %>
          <%= render 'searches/artist', results: @results %>
        <% when 'Comment' %>
          <%= render 'searches/comment', results: @results %>
        <% end %>
      <% else %> <!-- 該当する結果がない場合 -->
        <div class="text-center p-5">
          <i class="bi bi-emoji-frown" style="font-size: 3rem; color: #ccc;"></i>
          <h4 class="mt-3" style="color: #777;">該当する結果は見つかりませんでした</h4>
          <p class="mt-2" style="color: #aaa;">検索ワードを変えて再検索してみてください。</p>
          <%= link_to "トップに戻る", root_path, class: "btn btn-primary rounded-pill mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>