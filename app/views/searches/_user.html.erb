<table class="table table-hover align-middle">
  <thead class="table-light">
    <tr>
      <th>種別</th>
      <% if admin_signed_in? %>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
        <th>登録日</th>
      <% else %>
        <th>ニックネーム</th>
        <th>プロフィール</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% results.each do |user| %>
      <tr>
        <td>
          <span class="badge bg-primary">
            <i class="bi bi-person-fill"></i> ユーザー
          </span>
        </td>
        <td>
          <% if admin_signed_in? %>
            <%= link_to user.nickname, admin_user_path(user), class: 'text-dark fw-bold' %>
          <% else %>
            <%= link_to user.nickname, user_path(user), class: 'text-dark fw-bold' %>
          <% end %>
        </td>
        <% if admin_signed_in? %>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
        <% else %>
          <td><%= truncate(user.introduction, length: 50) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>