<div class="container mt-5">
  <h2 class="mb-4 border-bottom pb-2 mb-3 text-center fw-bold">すべてのコメント</h2>

  <% @comments.each do |comment| %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body d-flex align-items-start">

        <!-- ユーザー画像 -->
        <div class="me-3">
          <%= image_tag(comment.user.user_image.attached? ? url_for(comment.user.user_image) : "Vibin_no_image.jpg", class: "rounded-circle", size: "60x60", alt: comment.user.nickname) %>
        </div>

        <!-- コメント内容 -->
        <div class="flex-grow-1 ml-3">
          <h5 class="card-title mb-1"><%= comment.user.nickname %></h5>
          <!-- コメント本文 -->
          <p class="card-text">
            コメント：<%= comment.body.truncate(50) %>
          </p>

          <!-- 紐づく投稿タイトル -->
          <p class="mb-1 text-muted">
            投稿のタイトル：<%= comment.post.title %>
          </p>

          <!-- 投稿日時 -->
          <small class="text-muted">
            <%= comment.created_at.strftime("%Y/%m/%d %H:%M") %>
          </small>

          <div class="d-flex justify-content-end mr-5">
            <%= link_to "投稿ページへ", admin_post_path(comment.post), class: "btn btn-sm btn-outline-primary rounded-pill" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>