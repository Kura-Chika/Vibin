<h2>ユーザー一覧</h2>
<div class="container-fluid position-relative">
  <div class="row align-items-center justify-content-center">
    <div class="col-lg-10 col-md-8">
      <h5 class="d-inline-block p-2 m-4" style="background-color: #E0E0E0; color: #333;">会員一覧</h5>  
       <div class="row justify-content-center">
        <div class="col-md-12 col-lg-8">
          <table class="table">
            <thead style="background-color: #E0E0E0; color: #333;">
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= link_to "user.nickname", admin_user_path(user), class: 'text-dark' %></td>
                <td><%= user.email %></td>
                <td class="<%= user.is_active ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %>">
                                  <%= user.is_active ? '有効' : '退会' %>
                </td>
              </tr>
            <% end %>
          </table>
          <div class="col-12 d-flex justify-content-center">
            <%= paginate @users %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>