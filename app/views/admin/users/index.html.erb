<div class="container py-4">
  <h2 class="border-bottom pb-2 mb-3 text-center fw-bold">すべてのユーザー</h2>
  <div class="row g-4">
    <% if @users.any? %>
      <div class="list-group w-75">
        <% @users.each do |user| %>
          <%= link_to admin_user_path(user), class: "list-group-item list-group-item-action shadow-sm mb-2 rounded d-flex align-items-center hover-lift" do %>
            <%= image_tag(user.user_image.attached? ? url_for(user.user_image) : "Vibin_no_image.jpg", 
              class: "rounded-circle me-3", size: "50x50", alt: user.nickname) %>
            <div class="ml-3">
              <strong class="text-dark text-decoration-none"><%= user.nickname %></strong>
              <div class="text-muted"><%= user.email %></div>
            </div>
            <div class="d-flex ml-5">
              <% if user.is_active %>
                <span class="badge bg-success">有効</span>
              <% else %>
                <span class="badge bg-secondary">退会</span>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted">まだ登録ユーザーはいません</p>
    <% end %>
    <div class="col-12 d-flex justify-content-center mt-4">
      <%= paginate @users, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>