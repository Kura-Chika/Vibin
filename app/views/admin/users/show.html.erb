<h2>ユーザー詳細</h2>
<div class="container-fluid position-relative">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-8">
      <h5 class="d-inline-block px-4 m-4" style="background-color: #E0E0E0; color: #333;"><%= @user.nickname %>さんの会員詳細</h5>

      <div class="pl-5">
        <table class="table table-borderless">
          <tbody>

              <tr>
                <td class="col-3 text-left">会員ID</td>
                <td class="col-9 px-3 my-2">
                  <%= @user.id %>
                </td>
              </tr>
              <tr>
                <td class="col-3 text-left">ニックネーム</td>
                <td class="col-9 px-3 my-2">
                  <%= @user.nickname %>
                </td>
              </tr>
              <tr>
                <td class="col-3 text-left">メールアドレス</td>
                <td class="col-9 px-3 my-2">
                  <%= @user.email %>
                </td>
              </tr>
              <tr>
                <td class="col-3 text-left">会員ステータス</td>
                <td class="col-9 px-3 my-2 font-weight-bold">
                  <span class="<%= @user.is_active ? 'text-success' : 'text-secondary' %>">
                    <%= @user.is_active ? '有効' : '退会済み' %>
                  </span>
                </td>
              </tr>

          </tbody>
        </table>
      </div>

      <div class="row">
        <div class="col-2 offset-3">
          <%= link_to '編集する', edit_admin_user_path(@user), class: 'btn btn-success btn-space' %>
        </div>
        <div class="col-2">
          <%= link_to 'ユーザー投稿一覧へ', admin_root_path, class: 'btn btn-info' %>
        </div>
      </div>

    </div>
  </div>
</div>