<div class="row mt-3">
  <div class="col-auto ">
    <%= form_with model: artist, url: artist.persisted? ? admin_artist_path : admin_artists_path, method: artist.persisted? ? :patch : :post, class: "form-inline d-flex" do |f| %>
      <table class="mx-auto">
          <tr>
            <th><%= f.label :artist_image, "アーティスト画像" %></th>
            <td><%= f.file_field :artist_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label :name, "アーティスト名" %></th>
            <td><%= f.text_field :name,  placeholder:"アーティスト名", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :introduction, "アーティスト紹介" %></th>
            <td><%= f.text_area :introduction, size: "50x5", placeholder:"ここに紹介を記述します", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :genre_id, "ジャンル" %></th>
            <td>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center">
              <div class="d-flex justify-content-center">
                <%= f.submit btntxt, class:"btn btn-success px-4 " %>
              </div>
            </td>
          </tr>
      </table>
    <% end %>
  </div>
</div>