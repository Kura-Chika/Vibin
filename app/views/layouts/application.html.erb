<!DOCTYPE html>
<html>
  <head>
    <title>Vibin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/fe0f5b1e4c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <%= render 'layouts/header' %> <!-- ヘッダー -->
    <% flash.each do |message_type, message| %> <!-- フラッシュメッセージ -->
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    <main class="mb-auto">
      <div class="custom-container container-fluid mt-4">
        <div class="row">
          <div class="col-md-3">
            <%= render 'layouts/sidebar' %> <!-- サイドバー -->
          </div>
          <div class="col-md-9">
            <%= yield %> <!-- メインコンテンツ -->
          </div>
        </div>
      </div>
    </main>
    <%= render 'layouts/footer' %> <!-- フッター -->
  </body>
</html>
